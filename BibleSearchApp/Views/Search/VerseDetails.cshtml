@model BibleSearchApp.Models.VerseDetailsViewModel

@section Styles {
        <link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />
}

<div class="container">
    <!-- Verse Details Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h3 class="card-title highlight">[ @Model.BookName @Model.Chapter:@Model.VerseNumber ]</h3>
            <p class="card-text">@Model.Text</p>
        </div>
    </div>

    <!-- Notes Section -->
    <div class="notes-section">
        <h3 class="card-title highlight">Notes</h3>
        @if (Model.Notes != null && Model.Notes.Any())
        {
                <div class="table-responsive mt-4">
                    <table class="table table-striped table-bordered shadow-sm">
                        <thead class="table-primary">
                            <tr>
                                <th>Note</th>
                                <th class="text-center" style="width: 20%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var note in Model.Notes)
                        {
                                    <tr>
                                        <td>@note.Content</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="EditNote" 
                                                   asp-controller="Search" 
                                                   asp-route-noteId="@note.Id" 
                                                   class="btn btn-sm btn-warning">
                                                   Edit
                                                </a>
                                                <button type="submit" 
                                                        form="deleteForm-@note.Id" 
                                                        class="btn btn-sm btn-danger">
                                                    Delete
                                                </button>
                                            </div>
                                            <form id="deleteForm-@note.Id" 
                                                  method="post" 
                                                  asp-action="DeleteNote" 
                                                  asp-controller="Search" 
                                                  style="display: none;">
                                                <input type="hidden" name="noteId" value="@note.Id" />
                                            </form>
                                        </td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
        }
        else
        {
                <p class="text-muted">No notes available for this verse.</p>
        }
    </div>

    <!-- Add Note Form -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h3 class="card-title highlight">Add a Note</h3>
            <form method="post" asp-action="AddNote" asp-controller="Search">
                <input type="hidden" name="verseId" value="@Model.Id" />
                <textarea name="content" class="form-control mb-3" rows="4" placeholder="Add your note here..." required></textarea>
                <button type="submit" class="btn btn-primary">Add Note</button>
            </form>
        </div>
    </div>

    <!-- Back to Chapter Button -->
    <div class="mt-3">
        <a asp-action="ReferenceSearch" 
           asp-controller="Search" 
           asp-route-bookId="@Model.BookId" 
           asp-route-chapter="@Model.Chapter" 
           class="btn btn-secondary">
            Back to Chapter
        </a>
    </div>
</div>
