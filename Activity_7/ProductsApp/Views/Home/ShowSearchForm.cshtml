@model ProductsApp.Models.SearchFor

@{
    ViewData["Title"] = "Search Products";
}

<h2>Search Products</h2>

<form asp-action="SearchForProducts" method="get">
    <div class="form-group">
        <label asp-for="SearchTerm">Search Term</label>
        <input asp-for="SearchTerm" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="InTitle" class="form-check-input" type="checkbox" />
            <label asp-for="InTitle" class="form-check-label">Search in Title</label>
        </div>
        <div class="form-check">
            <input asp-for="InDescription" class="form-check-input" type="checkbox" />
            <label asp-for="InDescription" class="form-check-label">Search in Description</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
