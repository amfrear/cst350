@model ProductsApp.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h2>Product Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <img src="~/images/@Model.ImageURL" class="img-fluid" alt="@Model.Name"
                 style="height: 300px; object-fit: cover;"
                 onerror="this.src='~/images/Image_not_available.png';" />
        </div>
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Tax:</strong> $@Model.EstimatedTax</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Created At:</strong> @Model.CreatedAt?.ToString("D")</p>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="ShowAllProducts" class="btn btn-secondary">Back to List</a>
    </div>
</div>
