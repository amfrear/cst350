@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to Minesweeper</h1>
    <p class="lead">Challenge yourself and beat the mines!</p>

    <!-- Display the success message if it exists -->
    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
            </div>
    }

    <div class="mt-4">
        @* Display Register and Login buttons only if the user is not logged in *@
        @if (!User.Identity.IsAuthenticated)
        {
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mx-2">Register</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-secondary btn-lg mx-2">Login</a>
        }
        else
        {
            @* Display Start Game button if the user is logged in *@
                <a asp-controller="Game" asp-action="StartGame" class="btn btn-success btn-lg mx-2">Start Game</a>
        }
    </div>
</div>
