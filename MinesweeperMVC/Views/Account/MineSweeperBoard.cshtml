@model MinesweeperMVC.Models.Board

@{
    ViewData["Title"] = "Minesweeper Board";
}

<div class="container mt-5">
    <h2>Minesweeper Board - @Model.Size x @Model.Size</h2>

    <div class="grid-container" style="display: grid; grid-template-columns: repeat(@Model.Size, 30px); grid-gap: 2px;">
        @for (int i = 0; i < Model.Size; i++)
        {
            for (int j = 0; j < Model.Size; j++)
            {
                var cell = Model.Grid[i][j];
                        <button class="grid-cell btn btn-light" style="width: 30px; height: 30px;"
                                disabled="@cell.Visited">
                    @if (cell.Visited)
                    {
                        if (cell.Live)
                        {
                                            <span class="text-danger">💣</span> <!-- Display bomb for live cells -->
                        }
                        else if (cell.LiveNeighbors > 0)
                        {
                                            <span>@cell.LiveNeighbors</span> <!-- Display count of neighboring mines -->
                        }
                    }
                        </button>
            }
        }
    </div>
</div>

<style>
    .grid-cell {
        padding: 0;
        font-size: 0.8em;
    }
</style>
